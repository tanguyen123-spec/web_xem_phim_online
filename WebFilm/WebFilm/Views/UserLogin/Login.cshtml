@model WebFilm.Models.LoginUser

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content" style="margin-left:400px">
    @using (Html.BeginForm("Login", "UserLogin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <br />

        <div class="form-horizontal">
            <h2>ĐĂNG NHẬP</h2>

            <hr />

            <div class="form-group">
                <div class="col-md-4">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng Nhập" class="btn btn-default" />
                    <br>
                    Chưa có tài khoản?<a href="/UserLogin/Register">Đăng Ký</a>
                    <br />
                    <a href="/Home/ERROR">Quên mật khẩu?</a>
                </div>
            </div>
        </div>
    }
</div>

